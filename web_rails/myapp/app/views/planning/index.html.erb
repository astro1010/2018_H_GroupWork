<div class="">
  <% form_for(@plan) do |f| %>
    <table class="table">
      <tr>
        <th>時間<span class="text-danger">（必須）</span></th>
        <td><%= f.text_field :date, class: 'form-control' %></td>
      </tr>
      <tr>
        <th>スポット名<span class="text-danger">（必須）</span></th>
        <td><%= f.text_field :spot_name, class: 'form-control' %></td>
      </tr>
      <tr>
        <th>コメント</th>
        <td><%= f.text_field :comment, class: 'form-control' %></td>
      </tr>
    </table>

    <%= f.submit :"計画表を完成させる", class: "btn btn-primary" %>
  <% end %>

</div>