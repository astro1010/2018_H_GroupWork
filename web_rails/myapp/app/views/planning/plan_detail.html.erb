<% provide(:title, '計画表詳細') %>
<h1><%= @plan_name %></h1>
<ul class="cbp_tmtimeline">
  <li>
    <% @detail.each do |d| %>
      <time class="cbp_tmtime">
        <span><%= d.date.strftime("%Y/%m/%d") %></span>
        <span><%= d.date.strftime("%H:%M") %></span>
      </time>
      <div class="cbp_tmicon"></div>
      <div class="cbp_tmlabel">
        <h2 style="color: #fff">
          <%= d.spot_name %>
        </h2>
        <% if !d.comment.empty? %>
          <p style="color: #fff">
            <%= d.comment %>
          </p>
        <% end %>
      </div>
    <% end %>
  </li>
</ul>