<% if current_user %>
<div class="like-link" id="like-link-<%= detail.id %>">
    <% unless is_rate_exist?(current_user.id,detail.id) %>
        <%= link_to rate_path(spot_id:detail.id) , method: :post , class:"btn btn-tertiary" , remote: true do %>
            <i class="glyphicon glyphicon-heart-empty" title="いいねをつける"></i>
            いいね
            <span class="badge"><%= detail.rate %></span>
        <% end %>
    <% else %>
        <%= link_to unrate_path(spot_id:detail.id), method: :delete, class:"btn btn-tertiary  active", remote: true do %>
            <i class="glyphicon glyphicon-heart" title="いいねを外す" style="color: crimson"></i>
            いいね解除
            <span class="badge"><%= detail.rate %></span>
        <% end %>
    <% end %> 
</div>
<% else %>
    <%= link_to "#", class:"btn btn-default btn-tertiary disabled" , remote: true do %>
        <i class="glyphicon glyphicon-heart" title="いいねをつける"></i> <span class="badge"><%= detail.rate %></span>
    <% end %>
<% end %>