<% if !Rating.exists?(user_id:current_user.id,spot_id:@detail[0].id) %>
    <%= link_to rate_path(@detail[0].id) , method: :post , class:"btn btn-default btn-lg"  do %>
        <i class="glyphicon glyphicon-heart-empty"></i>
    <% end %>
<% else %>
    <%= link_to unrate_path(@detail[0].id),method: :delete , class:"btn btn-default btn-lg"  do %>
        <i class="glyphicon glyphicon-heart"></i>
    <% end %>
<% end %>
<%= @detail[0].rate %>