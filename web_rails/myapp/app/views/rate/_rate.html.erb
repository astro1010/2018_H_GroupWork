<% if !Rating.exists?(user_id:current_user.id,spot_id:detail.id) %>
    <%= link_to rate_path(detail.id) , method: :post , class:"btn btn-default btn-lg"  do %>
        <span class="glyphicon glyphicon-heart-empty" aria-hidden="true"></span>
        <%= detail.rate %>
        </span>
    <% end %>
<% else %>
    <%= link_to unrate_path(detail.id),method: :delete , class:"btn btn-default btn-lg"  do %>
        <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
        <%= detail.rate %>
        </span>
    <% end %>
<% end %>