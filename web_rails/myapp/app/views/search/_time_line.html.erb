<% @spot = Spot.order('updated_at DESC') %>
<% @spot.each do |data| %>
  <div id="media" style="width: 50%; margin: auto;">
    <a class="pull-left" href="#">
      <%= image_tag(data.images[0].url, class: "img-thumbnail", size: 100) if data.images? %>
    </a>
    <div class="media-body">
      <h4 class="media-heading">
        
        <!-- ここ -->
        <%= link_to data.spot_name, add_spot_path %>
      
      </h4>
      <%= data.details %>
      <%= button_tag :type => "submit", :class =>"btn btn-default btn-s-md pull-right" do %>
        
        <!-- ここ -->
        <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
        
        <%= data.rate %></span>
      <% end %>
    </div>
    <div>
      <span class="timestamp"><%= time_ago_in_words(data.updated_at) %>前</span>
    </div>
  </div>
  <br>
  <br>
<% end %>