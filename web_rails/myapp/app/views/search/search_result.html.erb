<%= render partial: 'search/search'%>
<hr><P class="center">検索結果</p>
<br>

<% @result.each do |data| %>
  <div id="media" style="width: 50%; margin: auto;">
    <a class="pull-left" href="#">
    <%= link_to search_detail_path(spot_id: data.id) do %>
      <%= image_tag(data.images[0].url, class: "img-thumbnail", size: 100) if data.images? %>
    <% end %>
    </a>
    
    <div class="card my-3" style="background-color:white;">
      <div class="card-header">
     
        <!-- <div class="media-body"> -->
          <h4> <!-- class="media-heading" -->
          <%= link_to data.spot_name ,search_detail_path(spot_id: data.id) %>
          </h4>
      
          <%= data.details %>
          </div>
          </div>
        <!--</div>-->
        <div class="card-body">  
        <div>
          <%= render 'favorite/favorite' , detail: data%>
          <%= render 'rate/rate' , detail: data %>
        </div>
        <br>
      </div>
    </div>   
<br><br>
<% end %>