<% if !Favorite.exists?(user_id:current_user.id,spot_id:detail.id) %>
    <%= link_to fav_path(detail.id) , method: :post , class:"btn btn-default btn-lg"  do %>
        <i class="glyphicon glyphicon-star-empty"></i>
    <% end %>
<% else %>
    <%= link_to unfav_path(detail.id),method: :delete , class:"btn btn-default btn-lg"  do %>
        <i class="glyphicon glyphicon-star"></i>
    <% end %>
<% end %>